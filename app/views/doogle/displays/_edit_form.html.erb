<%= f.inputs do %>
	<% unless @display.new_record? %>
	<%= f.input :id, :input_html => { :readonly => 'readonly' } %>
	<% end %>
	<% Doogle::FieldConfig.main.each do |field| %>
		<% if field.model_number? %>
		<% if @display.new_record? %>
		<%= f.input :model_number %>
		<% else %>
		<%= f.input :model_number, :input_html => { :readonly => 'readonly' } %>
		<% end %>
		<% elsif field.display_type? %>
		<%= f.input :type_key, :as => :select, :collection => Doogle::DisplayConfig.all, :label => field.name %>
		<% elsif field.has_many? %>
		<%= f.input field.key, :as => :check_boxes, :collection => field.has_many_class.all, :label => field.name %>
		<% elsif field.belongs_to? %>
		<%= f.input field.key, :as => :select, :collection => field.belongs_to_class.all, :member_label => field.belongs_to_class_member_label, :label => field.name %>
		<% elsif field.dimension? %>
		<%= render 'dimension', :f => f, :display => @display, :field => field, :search => false, :label => field.name %>
		<% elsif field.attachment? %>
		<%= f.input field.key, :as => :attachment, :label => field.name %>
		<% else %>
	  <%= f.input field.key, :label => field.name %>
		<% end %>
	<% end %>
<% end %>

<%= render 'dynamic_form', :object_name => 'display', :trigger_change => true %>