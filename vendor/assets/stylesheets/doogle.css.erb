/* DOOGLE
--------------------------------------------------- */
form.doogle li.doogle_dimensions input {
	width:10%;
	margin: 0 10px 0 5px;
}

form.doogle li.wide_string input {
	max-width:400px;
	width:400px;
	margin: 0 10px 0 0px;
}

form.doogle fieldset > ol > li.short_string input {
	max-width:100px;
	width:100px;
}

form.doogle fieldset > ol > li {
	margin: 0 0 .9em 0;
}

form.doogle textarea#display_comments { width:405px; height:6.5em; }
form.doogle textarea#doogle_display_log_details { max-width: 100%; width:60%; height:4.5em; }

div.doogle_search_box {
	border: 1px solid #eee;
	padding: 10px;
	width: 730px;
	margin: 0 0 10px 0;
  opacity:0.9;
	background-image: url('<%= asset_path("puffy_doogle.jpg") %>');
	background-repeat:repeat-y;
}

form.doogle fieldset > ol > li.hide {
	display:none;
}

.dooglemenu li {
	display: inline;
	margin: 0 10px 0 0;
	clear: none;
}

form.doogle fieldset.right {
	float: right;
}

form.doogle fieldset.horizontal > ol > li {
	display: inline;
}

form.doogle fieldset > ol > li, form.doogle fieldset > ol > li label {
	color: #222;
}

/* jquery.multiselect */

.ui-multiselect { padding:2px 0 2px 4px; text-align:left }
.ui-multiselect span.ui-icon { float:right }
.ui-multiselect-single .ui-multiselect-checkboxes input { position:absolute !important; top: auto !important; left:-9999px; }
.ui-multiselect-single .ui-multiselect-checkboxes label { padding:5px !important }

.ui-multiselect-header { margin-bottom:3px; padding:3px 0 3px 4px }
.ui-multiselect-header ul { font-size:0.9em }
.ui-multiselect-header ul li { float:left; padding:0 10px 0 0 }
.ui-multiselect-header a { text-decoration:none }
.ui-multiselect-header a:hover { text-decoration:underline }
.ui-multiselect-header span.ui-icon { float:left }
.ui-multiselect-header li.ui-multiselect-close { float:right; text-align:right; padding-right:0 }

.ui-multiselect-menu { display:none; padding:3px; position:absolute; z-index:10000; text-align: left }
.ui-multiselect-checkboxes { position:relative /* fixes bug in IE6/7 */; overflow-y:scroll }
.ui-multiselect-checkboxes label { cursor:default; display:block; border:1px solid transparent; padding:3px 1px }
.ui-multiselect-checkboxes label input { position:relative; top:1px }
.ui-multiselect-checkboxes li { clear:both; font-size:1.3em; padding-right:3px }
.ui-multiselect-checkboxes li.ui-multiselect-optgroup-label { text-align:center; font-weight:bold; border-bottom:1px solid }
.ui-multiselect-checkboxes li.ui-multiselect-optgroup-label a { display:block; padding:3px; margin:1px 0; text-decoration:none }

/* remove label borders in IE6 because IE6 does not support transparency */
* html .ui-multiselect-checkboxes label { border:none }

.ui-multiselect-hasfilter ul { position:relative; top:2px }
.ui-multiselect-filter { float:left; margin-right:10px; font-size:11px }
.ui-multiselect-filter input { width:100px; font-size:10px; margin-left:5px; height:15px; padding:2px; border:1px solid #292929; -webkit-appearance:textfield; -webkit-box-sizing:content-box; }

/* jquery.multiselect doogle-isms */
form.formtastic fieldset.horizontal ol button.ui-multiselect {
	margin-top: 22px;
}

.display_summary {
	padding-top: 15px;
}
.display_summary table:nth-child(1) {
	float:left;
	margin: 0px 100px 0 0;
}
.display_summary :nth-child(3) {
	margin-top: 5px;
}
input#display_why {
	width: 399px;
}
